<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardBackgroundColor="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/selectDialogTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置头像"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_030303"
                android:gravity="center"/>
            <TextView
                android:id="@+id/selectDialogMessageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_030303"
                android:text="是否退出登录？"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/color_D8D8D8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/selectDialogLeftButton"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_17"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/color_007AFF"
                    android:text="确定"/>
                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/color_D8D8D8"/>
                <Button
                    android:id="@+id/selectDialogRightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_007AFF"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_17"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>